// ECS Component Test Scene
// This scene is used to verify that components defined in the scene
// are properly loaded into the ECS registry.

.{
    .name = "ecs_test",
    .entities = .{
        // Player entity with Position, Health, and Player components
        .{
            .prefab = "player",
            .x = 0,
            .y = 0,
            .components = .{
                .Health = .{ .current = 100, .max = 100 },
            },
        },

        // Enemy 1 with Position, Health, and Enemy components
        .{
            .prefab = "enemy",
            .x = 50,
            .y = 50,
            .components = .{
                .Health = .{ .current = 30, .max = 30 },
                .Velocity = .{ .dx = -5, .dy = 0 },
            },
        },

        // Enemy 2 with Position, Health, and Enemy components
        .{
            .prefab = "enemy",
            .x = 100,
            .y = 100,
            .components = .{
                .Health = .{ .current = 50, .max = 50 },
                .Velocity = .{ .dx = 5, .dy = 0 },
            },
        },
    },
}
